{
  "info": {
    "name": "CAWI Backend - Admin Auth Flow Test",
    "description": "Koleksi lengkap untuk testing alur: register → admin login → akses dashboard dengan JWT token",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "1. Register User",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"username\": \"user_responden\",\n  \"email\": \"responden@example.com\",\n  \"password\": \"Password123!\",\n  \"role\": \"user\",\n  \"fullName\": \"Responden Test\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/auth/register",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "auth",
            "register"
          ]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Register user berhasil (status 201)', function () {",
              "    pm.response.to.have.status(201);",
              "});",
              "",
              "var json = pm.response.json();",
              "pm.test('Response memiliki success=true', function () {",
              "    pm.expect(json.success).to.equal(true);",
              "});"
            ]
          }
        }
      ]
    },
    {
      "name": "2. Register Admin",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"username\": \"admin_user\",\n  \"email\": \"admin@example.com\",\n  \"password\": \"AdminPass123!\",\n  \"role\": \"admin\",\n  \"fullName\": \"Admin Utama\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/auth/register",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "auth",
            "register"
          ]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Register admin berhasil (status 201)', function () {",
              "    pm.response.to.have.status(201);",
              "});",
              "",
              "var json = pm.response.json();",
              "pm.test('Response memiliki success=true', function () {",
              "    pm.expect(json.success).to.equal(true);",
              "});"
            ]
          }
        }
      ]
    },
    {
      "name": "3. Admin Login",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"username\": \"admin_user\",\n  \"password\": \"AdminPass123!\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/auth/admin/login",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "auth",
            "admin",
            "login"
          ]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Login berhasil (status 200)', function () {",
              "    pm.response.to.have.status(200);",
              "});",
              "",
              "var json = pm.response.json();",
              "pm.test('Response memiliki accessToken', function () {",
              "    pm.expect(json.data).to.have.property('accessToken');",
              "});",
              "",
              "// Simpan token ke environment variable untuk request berikutnya",
              "if (json.data && json.data.accessToken) {",
              "    pm.environment.set('adminToken', json.data.accessToken);",
              "    pm.environment.set('expiresIn', json.data.expiresIn || 3600);",
              "    console.log('✅ Token tersimpan di environment variable: adminToken');",
              "}"
            ]
          }
        }
      ]
    },
    {
      "name": "4. Verify Token",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{adminToken}}"
          },
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/auth/admin/verify",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "auth",
            "admin",
            "verify"
          ]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Token verification berhasil (status 200)', function () {",
              "    pm.response.to.have.status(200);",
              "});",
              "",
              "var json = pm.response.json();",
              "pm.test('Token valid dan role adalah admin', function () {",
              "    pm.expect(json.data.role).to.equal('admin');",
              "});"
            ]
          }
        }
      ]
    },
    {
      "name": "5. Get Admin Profile",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{adminToken}}"
          },
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/auth/admin/profile",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "auth",
            "admin",
            "profile"
          ]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Profile fetch berhasil (status 200)', function () {",
              "    pm.response.to.have.status(200);",
              "});",
              "",
              "var json = pm.response.json();",
              "pm.test('Response berisi profil admin', function () {",
              "    pm.expect(json.data).to.have.property('id');",
              "    pm.expect(json.data).to.have.property('username');",
              "    pm.expect(json.data.role).to.equal('admin');",
              "});"
            ]
          }
        }
      ]
    },
    {
      "name": "6. Access Dashboard (Protected)",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{adminToken}}"
          },
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/dashboard",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "dashboard"
          ]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Dashboard accessible dengan valid token (status 200)', function () {",
              "    pm.response.to.have.status(200);",
              "});",
              "",
              "var json = pm.response.json();",
              "pm.test('Dashboard response is valid', function () {",
              "    pm.expect(json).to.be.an('object');",
              "});"
            ]
          }
        }
      ]
    },
    {
      "name": "7. Admin Logout",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{adminToken}}"
          },
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/auth/admin/logout",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "auth",
            "admin",
            "logout"
          ]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Logout berhasil (status 200)', function () {",
              "    pm.response.to.have.status(200);",
              "});",
              "",
              "var json = pm.response.json();",
              "pm.test('Logout message present', function () {",
              "    pm.expect(json.message).to.include('Logout berhasil');",
              "});"
            ]
          }
        }
      ]
    }
  ]
}
